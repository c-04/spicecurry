<div class="main">
  <div class="container">
    <div class="inner">
      <div class="top-box">
      <h1 class="title">大阪<br>スパイス<br>カレー図鑑</h1>
      </div>
        <%  @random.each do |random|%>
            <h1><%= link_to 'ルーレット', random_shop_path(random.id) %></h1>
        <%end%>
    </div>

    <div class="inner">
      <%  @shops.each do |shop|%>
          <div class="show-box">
          <div class="shop-show-img">
          <%= link_to shop_path(shop.id) do %>
              <%= attachment_image_tag shop, :image,fallback: "no_image.jpg", size:'350x350' %>
          <% end %>
          </div>
          <h1><%= link_to shop.name,shop_path(shop.id) %></h1>
          </div>
      <% end %>

    </div>
  </div>
</div>
