

<div class="main">
  <div class="container">
    <div class="inner">
      <h1>大阪スパイスカレー冒険記</h1>
      <h1>管理者</h1>
      <h1><%= link_to "新規店舗追加", new_administrator_pages_shop_path %></h1>
    </div>

    <div class="inner">
      <%  @shops.each do |shop|%>
          <div class="show-box">
          <div class="shop-show-img">
          <%= link_to administrator_pages_shop_path(shop.id) do %>
              <%= attachment_image_tag shop, :image,fallback: "no_image.jpg", size:'350x350' %>
          <% end %>
          </div>
          <h1><%= link_to shop.name, administrator_pages_shop_path(shop.id) %></h1>
          </div>
      <% end %>

    </div>
  </div>
</div>
