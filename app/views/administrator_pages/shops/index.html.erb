

<div class="main">
  <div class="container">
    <div class="inner">
      <h1>大阪スパイスカレー図鑑(管理者）</h1>
      

      <div class="top-box rank-box clearfix">
        <ul>
              <li class="rank-text root-btn"> <%= link_to "新規店舗追加", new_administrator_pages_shop_path %></li>
              <li class="rank-text root-btn"><%= link_to "管理者ログアウト　", destroy_administrator_page_session_path, method: :delete%></li>
        </ul>
      </div>
    </div>

    <div class="inner">
      <%  @shops.each do |shop|%>
          <div class="show-box">
          <div class="shop-show-img">
          <%= link_to administrator_pages_shop_path(shop.id) do %>
              <%= attachment_image_tag shop, :image,fallback: "no_image.jpg", size:'350x350' %>
          <% end %>
          </div>
          <h1><%= link_to shop.name, administrator_pages_shop_path(shop.id) %></h1>
          </div>
      <% end %>

    </div>
  </div>
</div>
