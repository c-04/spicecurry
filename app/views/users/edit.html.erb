

<div class="main">
    <div class="container">
      <div class="inner">
        <div class="user-box">
          <%= form_for(@user, url: user_path, method: :patch) do |f| %>
          
          <div class="field">
              <%= f.label :name,"名前"%><br />
              <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
          </div>

          <div class="form-group has-icon">
            <%= f.label :image,"プロフィール画像" %><br />
            <label class="control-label sr-only" for="inputEmail">ProfileImage</label>
            <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
        　</div>

        　<div class="field">
            <%= f.label :introduction,"コメント" %><br />
            <%= f.text_field :introduction, autofocus: true, autocomplete: "introduction" %>
          </div>

          <div class="actions">
            <%= f.submit "変更を保存" %>
          </div>
            <% end %>
            <%= link_to "ユーザ退会", user_path(@user.id), method: :delete,class: 'btn-sm btn-danger ',"data-confirm" => "本当に削除しますか？"%>


      </div>
    </div>
  </div>
