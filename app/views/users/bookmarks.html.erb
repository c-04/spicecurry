<div class="main">
    <div class="container">
      <div class="inner">
        <div class="user-profile-box">

          <ul>
            <li><%= attachment_image_tag @user, :profile_image,fallback: "no_image.jpg", size:'100x100'%></li>
            <li><%=@user.name%></li>
            <li><%=@user.introduction%></li>
            <li><%= link_to("編集", edit_user_path(@user.id)) %></li>
            <li><%= link_to "ユーザログアウト　", destroy_user_session_path, method: :delete%></li>
          </ul>
        </div>
        <ul class="user-show-icon-box clearfix">
          <%= link_to user_path(@user.id) do %>
              <li><i class="far fa-check-circle user-show-icon"></i></li>
          <% end %>

          <%= link_to favorites_user_path(@user.id) do %>
              <li><i class="far fa-star user-show-icon"></i></li>
          <% end %>

          <%= link_to comments_user_path(@user.id) do %>
              <li><i class="far fa-comment user-show-icon"></i></li>
          <% end %>
          <li><i class="far fas fa-bookmark user-show-icon"></i></li>
        </ul>

          <% @bookmarks.each do |bookmark| %>
            <div class="user-profile-item-box clearfix">
            <% shop = Shop.find(bookmark.shop_id) %>
              <p><%= attachment_image_tag shop, :image,fallback: "no_image.jpg", size:'90x90'%></p>
              <p class="user-profile-item-shop-name"><%=shop.name%></p>
            </div>
          <% end %>

      </div>
    </div>
  </div>
